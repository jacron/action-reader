{
  "name": "Action Reader",
  "description": "Complete Reader",
  "version": "1.1",
  "author": "Jan H Croonen",
  "options_page": "options/options.html",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "<all_urls>",
    "cookies"
  ],
  "icons": {
    "128": "images/reader white.png"
  },
  "background": {
    "page": "background/background.html"
  },
  "browser_action": {
    "default_icon": "images/reader white.png",
    "default_title": "Reader"
  },
  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*"],
    "js": ["content.js"],
    "all_frames": false
  }],
  "web_accessible_resources": ["background/scan.js"],
  "manifest_version": 2
}
