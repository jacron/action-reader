{
  "name": "JReader",
  "description": "Create your own view for a website",
  "version": "3.0",
  "author": "Jan H Croonen",
  "manifest_version": 3,
  "options_page": "options/options.html",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "cookies",
    "downloads",
    "contextMenus"
  ],
  "icons": {
    "128": "images/reader white.png"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": "images/reader white.png",
    "default_title": "Reader",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["https://*/*"],
    "js": [
      "content/content.js"
    ],
    "run_at": "document_end",
    "all_frames": false
  }],
  "commands": {
    "open-editors": {
      "suggested_key": {
        "default": "Ctrl+Shift+J",
        "mac": "MacCtrl+J"
      },
      "description": "Open editors"
    },
    "reinject-styles": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "MacCtrl+K"
      },
      "description": "Reload the styles"
    },
    "_execute_action": {
      "suggested_key": {
        "mac": "MacCtrl+R"
      },
      "description": "Open extension"
    }
  }
}
