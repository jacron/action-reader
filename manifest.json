{
  "name": "Action Reader",
  "description": "Complete Reader",
  "version": "0.1",
  "author": "Jan H Croonen",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "icons": {
    "128": "images/reader white.png"
  },
  "background": {
    "scripts": [
      "shared/constants.js",
      "background/background.js",
      "background/host.js",
      "background/actions.js",
      "background/makeReader.js",
      "background/styling.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/reader white.png",
    "default_title": "Reader"
  },
  "web_accessible_resources": ["background/scan.js"],
  "manifest_version": 2
}
